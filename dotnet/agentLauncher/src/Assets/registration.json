{
  "version": 3,
  "actions": [
    {
      "id": "TypeAgentAction.Default",
      "description": "Process prompts with TypeAgent",
      "icon": "ms-resource://Files/Assets/Square44x44Logo.png",
      "usesGenerativeAI": true,
      "allowedAppInvokers": [ "*" ],
      "inputs": [
        {
          "name": "agentName",
          "kind": "Text",
          "required": true
        },
        {
          "name": "prompt",
          "kind": "Text",
          "required": true
        }
      ],
      "inputCombinations": [
        {
          "inputs": [
            "agentName",
            "prompt"
          ],
          "description": "Process a prompt from ${agentName.Text} with ${prompt.Text}"
        }
      ],
      "invocation": {
        "type": "Uri",
        "uri": "typeagent-launcher://invoke?agentName=${agentName.Text}&prompt=${prompt.Text}"
      }
    },
    {
      "id": "TypeAgentAction.PlayMusic",
      "description": "Play music with TypeAgent",
      "icon": "ms-resource://Files/Assets/Square44x44Logo.png",
      "usesGenerativeAI": true,
      "allowedAppInvokers": [ "*" ],
      "inputs": [
        {
          "name": "request",
          "kind": "Text",
          "required": true
        }
      ],
      "inputCombinations": [
        {
          "inputs": [
            "request"
          ],
          "description": "Play ${request.Text}"
        }
      ],
      "invocation": {
        "type": "Uri",
        "uri": "typeagent-launcher://invoke?agentName=blah&prompt=play ${request.Text}"
      }
    }
  ]
}