---
layout: base
---

<div class="docs-container">
  <aside class="docs-sidebar">
    <nav class="docs-nav">
      <h3>Documentation</h3>
      <ul>
        {% for item in navigation.docs %}
        <li>
          <a href="{{ item.url | url }}" {% if page.url == item.url %}class="active"{% endif %}>{{ item.title }}</a>
          
          {% if item.children %}
          <ul>
            {% for child in item.children %}
            <li>
              <a href="{{ child.url | url }}" {% if page.url == child.url %}class="active"{% endif %}>{{ child.title }}</a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </nav>
  </aside>
  
  <div class="docs-content">
    <h1>{{ title }}</h1>
    {{ content | safe }}
  </div>
</div>
