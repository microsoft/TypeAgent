{
  "name": "action-grammar",
  "version": "0.0.1",
  "private": true,
  "description": "Grammar for typeagent actions.",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/actionGrammar"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./rules": "./dist/indexRules.js",
    "./generation": "./dist/generation/index.js"
  },
  "scripts": {
    "build": "npm run tsc",
    "clean": "rimraf --glob dist *.tsbuildinfo *.done.build.log",
    "prettier": "prettier --check . --ignore-path ../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../.prettierignore",
    "test": "npm run test:local",
    "test:integration": "node --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=\"grammarGenerator.spec.js\"",
    "test:local": "node --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=\".*\\.spec\\.js\" --testPathIgnorePatterns=\"grammarGenerator.spec.js\"",
    "test:local:debug": "node --inspect-brk --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=\".*\\.spec\\.js\" --testPathIgnorePatterns=\"grammarGenerator.spec.js\"",
    "tsc": "tsc -b"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "@typeagent/action-schema": "workspace:*",
    "chalk": "^5.4.1",
    "debug": "^4.4.0",
    "dotenv": "^16.4.5",
    "regexp.escape": "^2.0.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.7",
    "@types/regexp.escape": "^2.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.4.5"
  }
}
