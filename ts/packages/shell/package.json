{
  "name": "agent-shell",
  "productName": "TypeAgent Shell",
  "version": "0.0.1",
  "description": "TypeAgent Shell",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/shell"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "main": "./out/main/index.js",
  "files": [
    "out",
    "package.json"
  ],
  "scripts": {
    "build": "concurrently npm:prepare-vite npm:build:electron:esm",
    "build:electron:cjs": "electron-vite build src/preload --config electron.vite.preload-cjs.config.mts --logLevel error",
    "build:electron:esm": "electron-vite build",
    "clean": "rimraf --glob out dist deploy *.tsbuildinfo *.done.build.log",
    "deploy": "rimraf ./deploy && pnpm deploy --filter=agent-shell --prod ./deploy --config.node-linker=hoisted --legacy",
    "dev": "npm run prepare-vite && electron-vite dev -- --env ../../.env",
    "postinstall": "cross-env \"npm_execpath=\" electron-builder install-app-deps",
    "package:linux": "npm run deploy && electron-builder --linux --config electron-builder.config.js -p never",
    "package:mac": "npm run deploy && electron-builder --mac --config electron-builder.config.js -p never",
    "package:win": "npm run deploy && electron-builder --win --config electron-builder.config.js -p never",
    "prepare-vite": "concurrently npm:typecheck npm:build:electron:cjs",
    "prettier": "prettier --check . --ignore-path ../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../.prettierignore",
    "shell:smoke": "npx playwright test simple.spec.ts",
    "shell:test": "npx playwright test",
    "start": "npm run prepare-vite && electron-vite preview -- --env ../../.env",
    "start:linux": "./dist/linux-unpacked/typeagent-shell",
    "start:mac": "open ./dist/mac-arm64/TypeAgent\\ Shell.app",
    "start:win": ".\\dist\\win-unpacked\\typeagent-shell.exe",
    "typecheck": "concurrently npm:typecheck:node npm:typecheck:web",
    "typecheck:node": "tsc -p tsconfig.node.json",
    "typecheck:web": "tsc -p tsconfig.web.json"
  },
  "dependencies": {
    "@azure/identity": "^4.2.1",
    "@azure/msal-node-extensions": "^1.5.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@fontsource/lato": "^5.2.5",
    "@typeagent/agent-sdk": "workspace:*",
    "agent-dispatcher": "workspace:*",
    "agent-rpc": "workspace:*",
    "aiclient": "workspace:*",
    "ansi_up": "^6.0.2",
    "browser-typeagent": "workspace:*",
    "common-utils": "workspace:*",
    "debug": "^4.4.0",
    "default-agent-provider": "workspace:*",
    "dompurify": "^3.2.5",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.6.2",
    "jose": "^5.9.6",
    "markdown-it": "^14.1.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.38.0",
    "typechat": "^0.1.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.52.0",
    "@types/debug": "^4.1.12",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "less": "^4.2.0",
    "rimraf": "^6.0.1",
    "type-fest": "^4.39.1",
    "typescript": "~5.4.5",
    "vite": "^6.2.7"
  }
}
