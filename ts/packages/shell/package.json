{
  "name": "agent-shell",
  "version": "0.0.1",
  "description": "TypeAgent Shell",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/shell"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "main": "./out/main/index.js",
  "files": [
    "out",
    "package.json",
    "src/**/*ActionSchema*"
  ],
  "scripts": {
    "build": "concurrently npm:prepare-vite npm:build:electron:esm",
    "build:electron:cjs": "electron-vite build src/preload --config electron.vite.preload-cjs.config.mts --logLevel error",
    "build:electron:esm": "electron-vite build",
    "clean": "rimraf --glob out dist deploy *.tsbuildinfo *.done.build.log",
    "deploy": "rimraf ./deploy && pnpm deploy --filter=agent-shell --prod ./deploy --config.node-linker=hoisted --legacy --ignore-scripts && pnpm -C deploy run postinstall ",
    "dev": "npm run prepare-vite && electron-vite dev -- --env ../../.env",
    "dev:noenv": "npm run prepare-vite && electron-vite dev",
    "postinstall": "run-script-os",
    "package": "run-script-os",
    "package:default": "pnpm run deploy && electron-builder --config electron-builder.config.js -p never",
    "package:linux": "ELECTRON_BUILDER_ARCH=x64 pnpm run package:default --linux --x64",
    "package:macos": "pnpm run package:macos:x64 && pnpm run package:macos:arm64",
    "package:macos:arm64": "ELECTRON_BUILDER_ARCH=arm64 pnpm run package:default --mac --arm64",
    "package:macos:x64": "ELECTRON_BUILDER_ARCH=x64 pnpm run package:default --mac --x64",
    "package:win32": "set ELECTRON_BUILDER_ARCH=x64 && pnpm run package:default --win --x64",
    "postinstall:default": "[ -n \"$ELECTRON_BUILDER_ARCH\" ] && electron-builder install-app-deps --arch $ELECTRON_BUILDER_ARCH || electron-builder install-app-deps",
    "postinstall:win32": "IF defined ELECTRON_BUILDER_ARCH ( electron-builder install-app-deps --arch %ELECTRON_BUILDER_ARCH%) ELSE ( electron-builder install-app-deps ) ",
    "prepare-vite": "concurrently npm:typecheck npm:build:electron:cjs",
    "prettier": "prettier --check . --ignore-path ../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../.prettierignore",
    "shell:smoke": "npx playwright test simple.spec.ts",
    "shell:test": "npx playwright test",
    "start": "npm run prepare-vite && electron-vite preview -- --env ../../.env",
    "start:package": "run-script-os",
    "start:package:linux": "./dist/linux-unpacked/typeagentshell",
    "start:package:macos": "open ./dist/mac-arm64/TypeAgent\\ Shell.app",
    "start:package:win32": ".\\dist\\win-unpacked\\typeagentshell.exe",
    "typecheck": "concurrently npm:typecheck:node npm:typecheck:web",
    "typecheck:node": "tsc -p tsconfig.node.json",
    "typecheck:web": "tsc -p tsconfig.web.json"
  },
  "dependencies": {
    "@azure/identity": "^4.10.0",
    "@azure/msal-node-extensions": "^1.5.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@typeagent/agent-sdk": "workspace:*",
    "agent-dispatcher": "workspace:*",
    "agent-rpc": "workspace:*",
    "aiclient": "workspace:*",
    "ansi_up": "^6.0.2",
    "browser-typeagent": "workspace:*",
    "common-utils": "workspace:*",
    "debug": "^4.4.0",
    "default-agent-provider": "workspace:*",
    "dompurify": "^3.2.5",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.6.2",
    "jose": "^5.9.6",
    "markdown-it": "^14.1.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.38.0",
    "typechat": "^0.1.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@fontsource/lato": "^5.2.5",
    "@playwright/test": "^1.52.0",
    "@types/debug": "^4.1.12",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "35.2.1",
    "electron-builder": "^26.0.16",
    "electron-vite": "^3.1.0",
    "less": "^4.2.0",
    "rimraf": "^6.0.1",
    "run-script-os": "^1.1.6",
    "type-fest": "^4.39.1",
    "typescript": "~5.4.5",
    "vite": "^6.3.4"
  },
  "productName": "TypeAgent Shell"
}
