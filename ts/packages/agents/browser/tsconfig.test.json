{
    "compilerOptions": {
        "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
        "emitDecoratorMetadata": false,
        "lib": ["dom", "es2021"],
        "outDir": "./dist-test",
        "typeRoots": [
      "./node_modules/@types",
      "./test"
    ],
    "types": ["jest", "chrome", "node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
    },
    "include": [
        "test/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}