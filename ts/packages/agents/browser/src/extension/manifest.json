{
  "manifest_version": 3,
  "name": "Browser TypeAgent",
  "version": "1.0",
  "description": "Automates various browser actions.",
  "minimum_chrome_version": "116",
  "action": {},
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["contentScript.js"],
      "runAt": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*/*"],
      "js": ["uiEventsDispatcher.js"],
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["https://paleobiodb.org/*"],
      "js": ["sites/paleobiodb.js"],
      "world": "MAIN"
    } 
  ],
  "web_accessible_resources": [
    {
      "resources": ["sites/paleobiodb.js"],
      "matches": ["https://paleobiodb.org/*"]
    },
    {
      "resources": ["uiEventsDispatcher.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "tts",
    "search",
    "storage",
    "scripting",
    "bookmarks",
    "history",
    "tabs",
    "webNavigation",
    "debugger",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
