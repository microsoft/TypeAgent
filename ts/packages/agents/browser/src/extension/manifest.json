{
  "manifest_version": 3,
  "name": "Browser TypeAgent",
  "version": "1.1",
  "description": "Automates various browser actions.",
  "minimum_chrome_version": "116",
  "action": {},
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B"
      }
    },
    "open_action_index": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Open Action Index Panel"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://localhost:9000/"],
      "js": ["contentScript.js", "webTypeAgentContentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*/*", "http://localhost:9000/"],
      "js": ["webTypeAgentMain.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["https://*/*"],
      "js": ["uiEventsDispatcher.js"],
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["https://paleobiodb.org/*"],
      "js": ["sites/paleobiodb.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sites/paleobiodb.js", "sites/paleobiodbSchema.mts"],
      "matches": ["https://paleobiodb.org/*"]
    },
    {
      "resources": ["uiEventsDispatcher.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "tts",
    "search",
    "storage",
    "scripting",
    "bookmarks",
    "history",
    "tabs",
    "webNavigation",
    "debugger",
    "contextMenus",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "options_ui": {
    "page": "views/options.html",
    "open_in_tab": false
  },
  "side_panel": {
    "default_path": "views/pageActions.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
