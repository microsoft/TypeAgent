    "prismjs": "^1.30.0",
    "puppeteer": "^23.8.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-adblocker": "^2.13.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "readline": "^1.3.0",
    "typeagent": "workspace:*",
    "typechat": "^0.1.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.18",
