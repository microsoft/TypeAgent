    "@types/prismjs": "^1.26.3",
    "@types/ws": "^8.5.10",
    "archiver": "^7.0.1",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^12.0.1",
    "crx": "^5.0.1",
    "dotenv": "^16.5.0",
    "find-up": "^7.0.0",
    "fs-extra": "^11.2.0",
    "rimraf": "^6.0.1",
