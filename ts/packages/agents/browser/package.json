{
  "name": "browser-typeagent",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/browser"
  },
  "license": "MIT",
  "author": "Microsoft",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./agent/manifest": "./src/agent/manifest.json",
    "./agent/handlers": "./dist/agent/actionHandler.mjs",
    "./agent/types": "./dist/common/browserControl.mjs",
    "./contentScriptRpc/types": "./dist/common/contentScriptRpc/types.mjs",
    "./contentScriptRpc/client": "./dist/common/contentScriptRpc/client.mjs"
  },
  "main": "index.js",
  "scripts": {
    "build": "fluid-build . -t build",
    "build:dev": "fluid-build . -t build:dev",
    "build:extension": "fluid-build . -t build:extension",
    "build:views": "fluid-build . -t build:views",
    "clean": "rimraf dist deploy && rimraf -g **/*.tsbuildinfo *.done.build.log",
    "dev:client": "vite serve",
    "package": "node scripts/packExtension.mjs",
    "prepare": "node ./scripts/prepare.mjs .",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "test": "npm run test:local",
    "test:local": "jest",
    "tsc:agent": "tsc -p src/agent/tsconfig.json",
    "tsc:common": "tsc -p src/common/tsconfig.json",
    "tsc:extension:chrome:typecheck": "tsc -p src/extension/tsconfig.json",
    "tsc:extension:electron:typecheck": "tsc -p src/electron/tsconfig.json",
    "tsc:puppeteer": "tsc -p src/puppeteer/tsconfig.json",
    "tsc:views:client:typecheck": "tsc -p src/views/client/plans/tsconfig.json",
    "tsc:views:server": "tsc -p src/views/server/tsconfig.json",
    "tsc:views:shared": "tsc -p src/views/shared/tsconfig.json",
    "vite:extension": "build-extension",
    "vite:extension:dev": "build-extension --dev",
    "vite:views:client": "vite build"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@typeagent/agent-sdk": "workspace:*",
    "action-schema": "workspace:*",
    "agent-rpc": "workspace:*",
    "aiclient": "workspace:*",
    "azure-ai-foundry": "workspace:*",
    "bootstrap": "^5.3.3",
    "chalk": "^5.4.1",
    "cheerio": "^1.1.0",
    "common-utils": "workspace:*",
    "cytoscape": "^3.32.0",
    "cytoscape-dagre": "^2.5.0",
    "dagre": "^0.8.5",
    "debug": "^4.4.0",
    "dompurify": "^3.2.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "html-to-text": "^9.0.5",
    "jsonpath": "^1.1.1",
    "knowledge-processor": "workspace:*",
    "knowpro": "workspace:*",
    "pdfjs-dist": "^5.3.31",
    "prismjs": "^1.30.0",
    "puppeteer": "^23.8.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-adblocker": "^2.13.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "readline": "^1.3.0",
    "sanitize-filename": "^1.6.3",
    "typeagent": "workspace:*",
    "typechat": "^0.1.1",
    "website-memory": "workspace:*",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@fluidframework/build-tools": "^0.56.0",
    "@types/chrome": "^0.0.256",
    "@types/cytoscape": "^3.21.9",
    "@types/cytoscape-dagre": "^2.3.3",
    "@types/dagre": "^0.7.52",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.7",
    "@types/jquery": "^3.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/jsonpath": "0.2.4",
    "@types/node": "^20.10.4",
    "@types/prismjs": "^1.26.3",
    "@types/ws": "^8.5.10",
    "archiver": "^7.0.1",
    "concurrently": "^9.1.2",
    "crx": "^5.0.1",
    "dotenv": "^16.5.0",
    "find-up": "^7.0.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.1",
    "typescript": "~5.4.5",
    "vite": "^6.3.4"
  },
  "fluidBuild": {
    "tasks": {
      "build": {
        "dependsOn": [
          "^build",
          "build:extension",
          "build:views",
          "tsc:agent",
          "tsc:puppeteer"
        ],
        "script": false
      },
      "build:dev": {
        "dependsOn": [
          "^build",
          "build:extension:dev",
          "build:views",
          "tsc:agent",
          "tsc:puppeteer"
        ],
        "script": false
      },
      "build:extension": {
        "dependsOn": [
          "tsc:extension:electron:typecheck",
          "tsc:extension:chrome:typecheck",
          "vite:extension"
        ],
        "script": false
      },
      "build:extension:dev": {
        "dependsOn": [
          "tsc:extension:electron:typecheck",
          "tsc:extension:chrome:typecheck",
          "vite:extension:dev"
        ],
        "script": false
      },
      "tsc:agent": [
        "tsc:common"
      ],
      "vite:extension": [
        "tsc:common"
      ],
      "vite:extension:dev": [
        "tsc:common"
      ],
      "build:views": {
        "dependsOn": [
          "tsc:views:server",
          "tsc:views:client:typecheck",
          "vite:views:client"
        ],
        "script": false
      },
      "tsc:views:server": [
        "tsc:views:shared"
      ],
      "tsc:views:client:typecheck": [
        "tsc:views:shared"
      ],
      "vite:views:client": [
        "tsc:views:shared"
      ]
    },
    "declarativeTasks": {
      "vite": {
        "inputGlobs": [
          "src/views/client/**/*"
        ],
        "outputGlobs": [
          "dist/views/public/**/*"
        ]
      },
      "build-extension": {
        "inputGlobs": [
          "src/extension/**",
          "src/electron/**"
        ],
        "outputGlobs": [
          "dist/extension/**",
          "dist/electron/**"
        ]
      }
    }
  }
}
