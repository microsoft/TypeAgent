{
  "name": "browser-typeagent",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/browser"
  },
  "license": "MIT",
  "author": "Microsoft",
  "sideEffects": false,
  "exports": {
    "./agent/manifest": "./src/agent/manifest.json",
    "./agent/handlers": "./dist/agent/actionHandler.mjs"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run tsc:common && concurrently npm:tsc:agent npm:tsc:puppeteer npm:webpack",
    "build2": "npm run tsc:common && concurrently npm:tsc:agent npm:tsc:puppeteer npm:vite",
    "build:dev": "npm run tsc:common && concurrently npm:tsc:agent npm:tsc:puppeteer npm:webpack:dev",
    "build:dev2": "npm run tsc:common && concurrently npm:tsc:agent npm:tsc:puppeteer npm:vite:dev",
    "clean": "rimraf dist deploy",
    "package": "node scripts/packExtension.mjs",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "tsc:agent": "tsc -p src/agent/tsconfig.json",
    "tsc:common": "tsc -p src/common/tsconfig.json",
    "tsc:puppeteer": "tsc -p src/puppeteer/tsconfig.json",
    "vite": "vite build --mode production",
    "vite:dev": "vite build --mode development",
    "webpack": "webpack --config webpack.prod.js",
    "webpack:dev": "webpack --config webpack.dev.js"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@typeagent/agent-sdk": "workspace:*",
    "action-schema": "workspace:*",
