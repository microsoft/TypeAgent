{
  "tasks": {
    "build": {
      "dependsOn": ["tsc:common"],
      "inputs": [
        "src/**/*",
        "scripts/**/*", 
        "*.config.*",
        "*.json"
      ],
      "outputs": [
        "dist/**/*"
      ]
    },
    "tsc:common": {
      "command": "npm run tsc:common",
      "inputs": [
        "src/common/**/*",
        "src/common/tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        "dist/common/**/*",
        ".tsbuildinfo/common.tsbuildinfo"
      ]
    },
    "tsc:agent": {
      "command": "npm run tsc:agent",
      "dependsOn": ["tsc:common"],
      "inputs": [
        "src/agent/**/*",
        "src/agent/tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        "dist/agent/**/*",
        ".tsbuildinfo/agent.tsbuildinfo"
      ]
    },
    "tsc:puppeteer": {
      "command": "npm run tsc:puppeteer",
      "inputs": [
        "src/puppeteer/**/*",
        "src/puppeteer/tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        "dist/puppeteer/**/*",
        ".tsbuildinfo/puppeteer.tsbuildinfo"
      ]
    },
    "vite": {
      "command": "npm run vite",
      "inputs": [
        "src/extension/**/*",
        "src/electron/**/*",
        "scripts/buildExtension.mjs"
      ],
      "outputs": [
        "dist/extension/**/*",
        "dist/electron/**/*",
        ".extension-build-hash"
      ]
    },
    "tsc:typecheck": {
      "command": "npm run tsc:typecheck",
      "dependsOn": ["tsc:common", "tsc:agent", "tsc:puppeteer"],
      "inputs": [
        "src/**/*",
        "tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        ".tsbuildinfo/main.tsbuildinfo"
      ]
    }
  }
}