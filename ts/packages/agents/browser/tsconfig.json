{
    "compilerOptions": {
       "strict": true,
       "module": "esnext",
       "moduleResolution": "Bundler",
       "target": "es2022",
       "esModuleInterop": true,
       "sourceMap": true,
       "rootDir": "src",
       "outDir": "dist/js",
       "noEmitOnError": true,
       "incremental": true,
       "tsBuildInfoFile": ".tsbuildinfo/main.tsbuildinfo",
       "typeRoots": [ "node_modules/@types" ]
    },
    "exclude": ["dist/**/*", "src/agent/*.ts", "test/*"],
    "ts-node": {
      "esm": true
    }
 }