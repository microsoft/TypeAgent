@ <ClearList> = clear (my)? $(listName:wildcard) list -> {
    actionName: "clearList",
    parameters: {
        listName: $(listName)
    }
}
  | (can you)? empty (my)? $(listName:wildcard) (list)? -> {
    actionName: "clearList",
    parameters: {
        listName: $(listName)
    }
}
  | delete (everything)? (all items)? from (my)? $(listName:wildcard) list -> {
    actionName: "clearList",
    parameters: {
        listName: $(listName)
    }
