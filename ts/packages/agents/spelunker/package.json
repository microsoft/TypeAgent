{
  "name": "spelunker-agent",
  "version": "0.0.1",
  "description": "Spelunker dispatcher agent",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/spelunker"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "exports": {
    "./agent/manifest": "./src/spelunkerManifest.json",
    "./agent/handlers": "./dist/spelunkerActionHandler.js"
  },
  "scripts": {
    "build": "npm run tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*Schema.ts\" \"src/**/*.txt\" \"src/*.py\" dist",
    "clean": "rimraf --glob dist *.tsbuildinfo *.done.build.log",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "tsc": "tsc -b"
  },
  "dependencies": {
    "@typeagent/agent-sdk": "workspace:*",
    "aiclient": "workspace:*",
    "better-sqlite3": "11.8.1",
    "code-processor": "workspace:*",
    "common-utils": "workspace:*",
    "dotenv": "^16.3.1",
    "typeagent": "workspace:*",
    "typechat": "^0.1.1",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.11",
    "copyfiles": "^2.4.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.2"
  }
}
