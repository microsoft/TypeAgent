{
  "tasks": {
    "build": {
      "inputs": [
        "src/**/*",
        "vite.config.js",
        "*.json"
      ],
      "outputs": [
        "dist/**/*"
      ]
    },
    "build:shared": {
      "command": "npm run build:shared",
      "inputs": [
        "src/view/shared/**/*",
        "src/view/shared/tsconfig.json",
        "tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        "dist/view/shared/**/*",
        ".tsbuildinfo/shared.tsbuildinfo"
      ]
    },
    "build:server": {
      "command": "npm run build:server",
      "dependsOn": ["build:shared"],
      "inputs": [
        "src/view/server/**/*",
        "src/view/server/tsconfig.json",
        "tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        "dist/view/server/**/*",
        ".tsbuildinfo/server.tsbuildinfo"
      ]
    },
    "build:agent": {
      "command": "npm run build:agent",
      "inputs": [
        "src/agent/**/*",
        "src/agent/tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "outputs": [
        "dist/agent/**/*",
        ".tsbuildinfo/agent.tsbuildinfo"
      ]
    },
    "build:client": {
      "command": "npm run build:client",
      "dependsOn": ["build:shared"],
      "inputs": [
        "src/view/client/**/*",
        "vite.config.js"
      ],
      "outputs": [
        "dist/view/public/**/*"
      ]
    }
  }
}
