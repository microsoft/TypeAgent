{
  "name": "chat-agent",
  "version": "0.0.1",
  "description": "Chat dispatcher agent",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/chat"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "exports": {
    "./agent/manifest": "./src/chatManifest.json",
    "./agent/handlers": "./dist/chatResponseHandler.js"
  },
  "scripts": {
    "build": "npm run tsc",
    "postbuild": "copyfiles -u 1 \"src/**/config.json\" dist",
    "clean": "rimraf --glob dist *.tsbuildinfo *.done.build.log",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "tsc": "tsc -b"
  },
  "dependencies": {
    "@azure/ai-projects": "^1.0.0-beta.8",
    "@azure/identity": "^4.10.0",
    "@typeagent/agent-sdk": "workspace:*",
    "aiclient": "workspace:*",
    "common-utils": "workspace:*",
    "knowledge-processor": "workspace:*",
    "telemetry": "workspace:*",
    "typeagent": "workspace:*",
    "typechat": "^0.1.1"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.4.5"
  }
}
