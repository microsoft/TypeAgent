{
  "name": "weather-agent",
  "version": "0.0.1",
  "private": true,
  "description": "Weather agent for TypeAgent",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/weather"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "exports": {
    "./agent/manifest": "./src/weatherManifest.json",
    "./agent/handlers": "./dist/weatherActionHandler.js"
  },
  "scripts": {
    "agc": "agc -i ./src/weatherSchema.agr -o ./dist/weatherSchema.ag.json",
    "asc": "asc -i ./src/weatherSchema.ts -o ./dist/weatherSchema.pas.json -t WeatherAction",
    "build": "concurrently npm:tsc npm:asc npm:agc",
    "clean": "rimraf --glob dist *.tsbuildinfo *.done.build.log",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "test:api": "node testWeatherSimple.mjs",
    "tsc": "tsc -b"
  },
  "dependencies": {
    "@typeagent/agent-sdk": "workspace:*"
  },
  "devDependencies": {
    "@typeagent/action-schema-compiler": "workspace:*",
    "action-grammar-compiler": "workspace:*",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.4.5"
  },
  "fluidBuild": {
    "tasks": {
      "agc": {
        "dependsOn": [
          "action-grammar-compiler#tsc"
        ],
        "files": {
          "inputGlobs": [
            "src/weatherSchema.agr"
          ],
          "outputGlobs": [
            "dist/weatherSchema.ag.json"
          ]
        }
      }
    }
  }
}
