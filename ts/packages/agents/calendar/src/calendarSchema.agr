// Generated grammar for calendarSchema
// This file contains common patterns for user requests
// Types: wildcard = 1+ words, word = exactly 1 word

// scheduleEvent
@ <ScheduleEvent> = schedule a $(description:wildcard) for $(date:wildcard) at $(time:word) in $(location:wildcard) with $(participant:wildcard) -> {
    actionName: "scheduleEvent",
    parameters: {
        description: description,
        date: date,
        time: time,
        location: location,
        participant: participant
    }
}
  | (can you)? set up $(description:wildcard) on $(date:wildcard) at $(time:word) -> {
    actionName: "scheduleEvent",
    parameters: {
        description: description,
        date: date,
        time: time
    }
}
  | book $(description:wildcard) with $(participant:wildcard) at $(location:wildcard) $(date:wildcard) at $(time:word) -> {
    actionName: "scheduleEvent",
    parameters: {
        description: description,
        date: date,
        time: time,
        location: location,
        participant: participant
    }
}

// findEvents
@ <FindEvents> = find all events on $(date:wildcard) that include $(participant:wildcard) -> {
    actionName: "findEvents",
    parameters: {
        date: date,
        participant: participant
    }
}
  | show me meetings about $(description:wildcard) scheduled for $(date:wildcard) -> {
    actionName: "findEvents",
    parameters: {
        description: description,
        date: date
    }
}
  | what events do I have with $(participant:wildcard) on $(date:wildcard) about (the)? $(description:wildcard) -> {
    actionName: "findEvents",
    parameters: {
        date: date,
        participant: participant,
        description: description
    }
}

// addParticipant
@ <AddParticipant> = include $(participant:wildcard) in $(description:wildcard) -> {
    actionName: "addParticipant",
    parameters: {
        description: description,
        participant: participant
    }
}

// findTodaysEvents
@ <FindTodaysEvents> = what's on my calendar $(date:wildcard) -> {
    actionName: "findTodaysEvents",
    parameters: {
        date: date
    }
}
  | show me all my appointments and meetings for $(date:wildcard) -> {
    actionName: "findTodaysEvents",
    parameters: {
        date: date
    }
}
  | (can you)? (tell me)? what (do)? I have scheduled for today -> {
    actionName: "findTodaysEvents"
}

// findThisWeeksEvents

@ <Start> = <ScheduleEvent>
  | <FindEvents>
  | <AddParticipant>
  | <FindTodaysEvents>
  | <FindThisWeeksEvents>

@ <FindThisWeeksEvents> = what's happening this week -> {
    actionName: "findThisWeeksEvents"
}
  | show me all my events for this week starting $(startDay:word) -> {
    actionName: "findThisWeeksEvents",
    parameters: {
        startDay: startDay
    }
}
  | (can you)? find what I have scheduled this week -> {
    actionName: "findThisWeeksEvents"
}
