{
  "name": "markdown-agent",
  "version": "0.0.1",
  "description": "Markdown agent",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/markdown"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "exports": {
    "./agent/manifest": "./src/agent/markdownManifest.json",
    "./agent/handlers": "./dist/agent/markdownActionHandler.js"
  },
  "scripts": {
    "build": "npm run tsc && npm run webpack",
    "postbuild": "copyfiles -u 1 \"src/**/config.json\" dist",
    "clean": "rimraf --glob dist *.tsbuildinfo *.done.build.log",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "tsc": "tsc -b",
    "webpack": "webpack"
  },
  "dependencies": {
    "@typeagent/agent-sdk": "workspace:*",
    "aiclient": "workspace:*",
    "common-utils": "workspace:*",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "katex": "^0.16.21",
    "markdown-it": "^14.1.0",
    "markdown-it-texmath": "^1.0.0",
    "typeagent": "workspace:*",
    "typechat": "^0.1.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.7",
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^14.1.2",
    "copy-webpack-plugin": "^12.0.1",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "~5.4.5",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  }
}
