{
  "name": "turtle",
  "version": "0.0.1",
  "private": true,
  "description": "Turtle web app with browser side agent for TypeAgent",
  "homepage": "https://github.com/microsoft/TypeAgent#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/TypeAgent.git",
    "directory": "ts/packages/agents/turtle"
  },
  "license": "MIT",
  "author": "Microsoft",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "asc": "asc -i ./src/site/turtleActionSchema.ts -o ./dist/site/turtleActionSchema.pas.json -t TurtleAction",
    "build": "npm run asc && npm run tsc && npm run webpack",
    "clean": "rimraf --glob dist *.tsbuildinfo *.done.build.log",
    "prettier": "prettier --check . --ignore-path ../../../.prettierignore",
    "prettier:fix": "prettier --write . --ignore-path ../../../.prettierignore",
    "start": "webpack serve --open",
    "tsc": "tsc -b tsconfig.json",
    "webpack": "webpack"
  },
  "dependencies": {
    "@typeagent/agent-sdk": "workspace:*",
    "chalk": "^5.4.1",
    "debug": "^4.4.0"
  },
  "devDependencies": {
    "@typeagent/action-schema-compiler": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.7",
    "copy-webpack-plugin": "^12.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "~5.4.5",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  },
  "fluidBuild": {
    "tasks": {
      "asc": {
        "dependsOn": [
          "@typeagent/action-schema-compiler#tsc"
        ],
        "files": {
          "inputGlobs": [
            "src/site/turtleActionSchema.ts"
          ],
          "outputGlobs": [
            "dist/site/turtleActionSchema.pas.json"
          ]
        }
      }
    }
  }
}
