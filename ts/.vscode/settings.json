{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "cSpell.words": [
        "aiclient",
        "AUTOINCREMENT",
        "Chunker",
        "Exif",
        "exifreader",
        "Knowpro",
        "ktype",
        "lightgray",
        "Lucene",
        "NOCASE",
        "oclif",
        "openai",
        "regen",
        "textpro",
        "tsbuildinfo",
        "typeagent",
        "typechat"
    ],
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "jest.virtualFolders": [
        {"name": "actionSchema", "rootPath": "packages/actionSchema"},
        {"name": "aiclient", "rootPath": "packages/aiclient"},
        {"name": "api", "rootPath": "packages/api"},
        {"name": "cache", "rootPath": "packages/cache"},
        {"name": "commonUtils", "rootPath": "packages/commonUtils"},
        {"name": "dispatcher", "rootPath": "packages/dispatcher"},
        {"name": "defaultAgentProvider", "rootPath": "packages/defaultAgentProvider"},
        {"name": "knowledgeProcessor", "rootPath": "packages/knowledgeProcessor"},
        {"name": "memoryProviders", "rootPath": "examples/memoryProviders"},
        {"name": "typeagent", "rootPath": "packages/typeagent"},
        {"name": "knowpro", "rootPath": "packages/knowpro"},
        {"name": "knowpro-conversation", "rootPath": "packages/memory/conversation"},
        {"name": "knowpro-storage", "rootPath": "packages/memory/storage"},
    ],
    "jest.runMode": "on-demand",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "jest.jestCommandLine": "node --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js"
}